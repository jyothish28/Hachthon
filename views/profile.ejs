<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile - Hackathon Platform</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #6a11cb, #f85454);
            min-height: 100vh;
            padding-top: 80px;
            color: #fff;
        }

        nav {
            background: linear-gradient(135deg, #6a11cb, #f85454);
            color: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
        }

        nav h1 {
            font-size: 1.5rem;
            font-weight: 600;
        }

        nav ul {
            list-style: none;
            display: flex;
            align-items: center;
        }

        nav ul li {
            margin: 0 1rem;
        }

        nav ul li a {
            color: white;
            text-decoration: none;
            font-size: 1rem;
            transition: color 0.3s ease;
        }

        nav ul li a:hover {
            color: #cbd5e1;
        }

        .profile-icon {
            position: relative;
        }

        .profile-icon img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            cursor: pointer;
        }

        .dropdown-menu {
            display: none;
            position: absolute;
            top: 40px;
            right: 0;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 100;
        }

        .dropdown-menu a {
            display: block;
            padding: 0.8rem 1.2rem;
            text-decoration: none;
            color: #333;
            font-size: 0.9rem;
            transition: background 0.3s ease;
        }

        .dropdown-menu a:hover {
            background-color: #f0f0f0;
        }

        .container {
            max-width: 800px;
            margin: 40px auto;
            padding: 20px;
        }

        .profile-section {
            background: rgba(255, 255, 255, 0.9);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .profile-section h1 {
            color: #6a11cb;
            font-size: 2rem;
            margin-bottom: 1.5rem;
        }

        .profile-details {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        .profile-details p {
            color: #34495e;
            font-size: 1.1rem;
            width: 100%;
            max-width: 400px;
            display: flex;
            justify-content: space-between;
        }

        .profile-details p strong {
            font-weight: 600;
            color: #6a11cb;
        }

        .error-message {
            color: #e74c3c;
            text-align: center;
            margin: 2rem 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        .success-message {
            color: #2ecc71;
            text-align: center;
            margin: 2rem 0;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2);
        }

        @media (max-width: 768px) {
            nav ul {
                flex-direction: column;
                background-color: #2563eb;
                position: absolute;
                top: 60px;
                right: 0;
                width: 200px;
                display: none;
            }

            nav ul.show {
                display: flex;
            }

            .menu-toggle {
                display: block;
                cursor: pointer;
                font-size: 1.5rem;
            }

            .container {
                margin: 20px auto;
                padding: 10px;
            }

            .profile-section {
                padding: 1.5rem;
            }

            .profile-details p {
                flex-direction: column;
                align-items: flex-start;
                gap: 0.5rem;
            }
        }

        .menu-toggle {
            display: none;
        }
    </style>
</head>
<body>
    <nav>
        <h1>Hackathon Platform</h1>
        <div class="menu-toggle">â˜°</div>
        <ul>
            <li><a href="<%= user.role === 'organizer' ? '/organizer' : '/participant' %>">Home</a></li>
            <% if (user.role === 'organizer') { %>
                <li><a href="/addEvent">Event Management</a></li>
                <li><a href="/hosting">Updated Events</a></li>
                <li><a href="/announcements">Announcements</a></li>
            <% } else { %>
                <li><a href="/events">Event Registration</a></li>
                <li><a href="/submissions/list">Submissions</a></li>
                <li><a href="/registered">Registered Events</a></li>
            <% } %>
            <li class="profile-icon">
                <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="Profile" id="profileIcon">
                <div class="dropdown-menu" id="dropdownMenu">
                    <a href="/profile">Profile</a>
                    <a href="/logout">Logout</a>
                </div>
            </li>
        </ul>
    </nav>

    <div class="container">
        <div class="profile-section">
            <h1>Your Profile</h1>
            <div class="profile-details">
                <p><strong>Name:</strong> <%= user.name %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Role:</strong> <%= user.role.charAt(0).toUpperCase() + user.role.slice(1) %></p>
            </div>
            <% if (success) { %>
                <p class="success-message"><%= success %></p>
            <% } %>
            <% if (error) { %>
                <p class="error-message"><%= error %></p>
            <% } %>
        </div>
    </div>

    <script>
        const menuToggle = document.querySelector('.menu-toggle');
        const navLinks = document.querySelector('nav ul');
        const profileIcon = document.getElementById('profileIcon');
        const dropdownMenu = document.getElementById('dropdownMenu');

        menuToggle.addEventListener('click', () => {
            navLinks.classList.toggle('show');
        });

        profileIcon.addEventListener('click', (e) => {
            e.stopPropagation();
            dropdownMenu.style.display = dropdownMenu.style.display === 'block' ? 'none' : 'block';
        });

        window.addEventListener('click', (e) => {
            if (!profileIcon.contains(e.target) && !dropdownMenu.contains(e.target)) {
                dropdownMenu.style.display = 'none';
            }
        });
    </script>
</body>
</html>